<div id="<%= dom_id poster %>">
  <h1 class="poster__service">
    <%= poster.service.name %>
  </h1>

  <div class="poster__provider-info">
    <strong>Provider:</strong>
    <%= poster.user.email %>
    <% if poster.user.profile.present? %>
      <p class="provider-info__bio">
        <%= poster.user.profile.surname %> <%= poster.user.profile.name %> <%= poster.user.profile.fatherly %>
      </p>
    <% end %>
  </div>

  <!-- Adding the name field -->
  <p class="poster__name">
    <%= poster.name %>
  </p>
  <p class="poster__description">
    <%= poster.description %>
  </p>
  <p class="poster__price">
    <%= poster.price %>
  </p>

  <% if poster.picture.present? %>
    <div class="poster__picture">
      <p><strong>Picture:</strong></p>
      <%= image_tag poster.picture.url %>

      <!-- Clear Picture Button -->
      <% if current_user == poster.user %>
        <%= button_to "Clear Picture", clear_picture_poster_path(poster), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to clear the picture?" } %>
      <% end %>
    </div>
  <% end %>
</div>
