  <div style="margin-bottom: 10px;">
    <%= form.label :password, style: "display: block; width: 100%;" %>
    <%= form.text_field :password, style: "width: 100%;" %>
  </div>

  <div style="margin-bottom: 10px;">
    <%= form.label :account_id, style: "display: block; width: 100%;" %>
