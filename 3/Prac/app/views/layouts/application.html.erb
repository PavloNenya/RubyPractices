<!DOCTYPE html>
<html>
<head>
  <title>Prac</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" %>
  <%= javascript_importmap_tags %>

</head>

<body>
<nav class="nav-bar">
  <ul class="nav-bar__wrapper">
    <li class="nav-bar__item"><a href="#" class="nav-bar__link"><%= link_to 'Home', home_path %></a></li>
    <li class="nav-bar__item">
      <a href="#" class="nav-bar__link" aria-current="page"><%= link_to 'New Poster', new_poster_path %></a>
    </li>
    <li class="nav-bar__item"><a href="#" class="nav-bar__link"><%= link_to 'New Order', new_order_path %></a></li>
    <li class="nav-bar__item"><a href="#" class="nav-bar__link"><%= link_to 'New Account', new_account_path %></a></li>
    <li class="nav-bar__item"><a href="#" class="nav-bar__link"><%= link_to 'New Comment', new_comment_path %></a></li>
  </ul>
  <ul class="nav-bar__user_actions">
    <% if user_signed_in? %>
      <li class="user-actions__item"><%= link_to "Вийти", destroy_user_session_path, method: :delete %></li>
    <% else %>
      <li class="user-actions__item"><%= link_to 'Sign in', new_user_session_path %></li>
      <li class="user-actions__item"><%= link_to 'Sign up', new_user_registration_path %></li>
    <% end %>
  </ul>
</nav>


<div class="container">
  <%= yield %>
</div>
</body>
</html>
