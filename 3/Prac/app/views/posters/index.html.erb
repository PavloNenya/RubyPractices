<p style="color: green; text-align: center;"><%= notice %></p>

<h1 style="text-align: center;">Posters</h1>

<div id="posters">
  <% @posters.each do |poster| %>
    <%= render poster %>
    <p style="text-align: center;"><%= link_to "Show this poster", poster %></p>
  <% end %>
</div>

<div style="text-align: center; margin-top: 20px;">
  <%= link_to "New poster", new_poster_path, class: "button" %>
</div>
